    function SubmitState() {
        var CountryID = $("#AddStateCountryID").val();
        var Name = $("#NewStateName").val();
        var Abbreviation = $("#StateAbbreviation").val();
        //alert("CountryID: " + CountryID + " ,State: " + Name + ", Abbrev: " + Abbreviation);
