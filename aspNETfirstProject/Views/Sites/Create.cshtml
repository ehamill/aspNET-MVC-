<script type="text/javascript">
    //Need jquery for this...Not installed by default in mvc5.. add scripts for jquery in header or add the bundle
    $(document).ready(function () {
        //Dropdownlist Selectedchange event
        $("#CustomerID").change(function () {
            LoadSiteTypes(); //Calls JS fn below
        });
        $("#Country").change(function () {
            LoadStates();
        });
    });


    function LoadSiteTypes() {
        $("#SiteTypeID").empty(); //Clear SiteType DD box
        $.ajax({
            type: 'POST',
            url: '@Url.Action("GetSiteTypes")', // we are calling json method in Controller
            dataType: 'json',
            data: { CustomerID: $("#CustomerID").val() },
            success: function (SiteTypes) {
                $.each(SiteTypes, function (i, SiteType) {
                    $("#SiteTypeID").append('<option value="' + SiteType.Value + '">' +
                            SiteType.Text + '</option>');
                });
            },
            error: function (ex) {
                alert('Failed to retrieve SiteTypes' + ex);
            }
        });
        return false;
    }


    //  ADD NEW SITE TYPE by modal and ajax
    function SubmitSiteType() {
        var CustomerID = $("#CustomerID2").val(); 
        var Name = $("#SiteTypeName").val(); 
        document.getElementById("HiddenMessage").innerHTML = "";
        if (Name == "" || CustomerID == "") {
            document.getElementById("HiddenMessage").style.color = "red";
            document.getElementById("HiddenMessage").innerHTML = "Must Select Customer and SiteType!";
            } else {
            $.ajax({
                method: "POST",
                url: "AddSiteType",
                data: {
                    CustomerID: CustomerID, Name: Name,
                },
                dataType: "html",   //expect html to be returned
                success: function (data) {
                    if (data.success) {
                        $("#HiddenMessage").html(data.responseText);
                    } else {
                        $("#HiddenMessage").html(data.responseText);
                    }
                    //document.getElementById("SiteTypeName").value = ""; //Clear input text box
                    //$("#HiddenMessage").html(data);
                    //document.getElementById("HiddenMessage").style.color = "blue";
                    //LoadSiteTypes(); //Reload Site types drop down box
                },
                error: function (data) {
                    //if we get here, validation failed
                    alert(data);
                    $("#HiddenMessage").html(data);
                }
            });
        }
    }

   
    function CheckSiteNumber($SiteNumber) {
        var CustomerID = $("#CustomerID").val(); 
        var SiteNumber = $SiteNumber;
        document.getElementById("HiddenSiteNumberMessage").innerHTML = "";
        if (CustomerID == "" ||  SiteNumber == "") {
            document.getElementById("HiddenSiteNumberMessage").innerHTML = "<b style='color:red'>Must Select Customer and SiteNumber!</b>";
        } else {
            $.ajax({
                method: "POST",
                url: "CheckSiteNumber", 
                data: {
                    CustomerID: CustomerID, SiteNumber: SiteNumber,
                },
                dataType: "json",  
                success: function (data) {
                    if (data.success) {
                        $("#HiddenSiteNumberMessage").html(data.responseText);
                        document.getElementById("HiddenSiteNumberMessage").style.color = "green";
                    } else {
                        $("#HiddenSiteNumberMessage").html(data.responseText);
                        document.getElementById("HiddenSiteNumberMessage").style.color = "red";
                    }
                },
                error: function () {
                    alert('failed site number check');
                    //if we get here, validation failed
                    $("#hiddenSiteNumberError").show();
                    var html = '<span style="background-color: yellow" class="text-danger">Site Number <mark>' + siteNumber + '</mark> already exists!';
                    document.getElementById("hiddenSiteNumberError").innerHTML = html;
                    document.getElementById("siteNumber").value = "";
                }
            });
        }
    }

    function AddCustomer() {
        var Name = $("#Name").val();
        var Abbreviation = $("#BillingAddress").val();
        //alert(" custID: " + CustomerID + " siteType: " + Name );
        document.getElementById("HiddenCustomerMessage").innerHTML = "";
        if (Name == "" || BillingAddress == "") {
            document.getElementById("HiddenCustomerMessage").style.color = "red";
            document.getElementById("HiddenCustomerMessage").innerHTML = "Must Input Customer Name AND Billing Address!";
        } else {
            $.ajax({
                method: "POST",
                url: "AddCustomer",
                data: {
                    Name: Name, BillingAddress: BillingAddress,
                },
                dataType: "html",   //expect html to be returned
                success: function (data) {
                    document.getElementById("Name").value = ""; //Clear input text box
                    document.getElementById("BillingAddress").value = "";
                    $("#HiddenCustomerMessage").html(data);
                    document.getElementById("HiddenCustomerMessage").style.color = "blue";
                    LoadCountries();//Reload Countries DropDown
                },
                error: function (data) {
                    //if we get here, validation failed
                    alert(data);
                    $("#HiddenCountryMessage").html(data);
                }
            });
        }
    }

